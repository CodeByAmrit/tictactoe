        </div>

    </div>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRightLogin" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasRightLabel">Login Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body customLogin">
            <form action="/" method="post" style="width: 14rem;">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="mb-3">
                    <a href="/forget">Forget Password</a>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRightSignup" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasRightLabel">Create Account</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body customLogin">
            <form action="/create" method="post" style="width: 100%;">
                <div class="row g-3">
                    <div class="row">
                        <div class="col mb-3" style="background-color: white;">
                            <input type="text" class="form-control customInputSignup" placeholder="First name"
                                aria-label="First name" name="first_name">
                        </div>
                        <div class="col mb-3" style="background-color: white;">
                            <input type="text" class="form-control customInputSignup" placeholder="Last name"
                                aria-label="Last name" name="last_name">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3 ">
                            <input type="email" class="form-control" placeholder="Email" aria-label="email"
                                name="email">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3 ">
                            <input type="password" class="form-control" placeholder="Password" aria-label="password"
                                name="password">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3 ">
                            <button type="submit" class="btn btn-primary">Create Account</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
